{
  "id": "secureclaw",
  "name": "SecureClaw",
  "description": "Automated security hardening for OpenClaw",
  "version": "2.1.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "cost": {
        "type": "object",
        "properties": {
          "hourlyLimitUsd": { "type": "number" },
          "dailyLimitUsd": { "type": "number" },
          "monthlyLimitUsd": { "type": "number" },
          "circuitBreakerEnabled": { "type": "boolean" }
        }
      },
      "autoHarden": {
        "type": "boolean",
        "description": "Automatically apply hardening on gateway start"
      },
      "failureMode": {
        "type": "string",
        "enum": ["block_all", "safe_mode", "read_only"],
        "description": "Graceful degradation mode when issues detected (G4)"
      },
      "riskProfile": {
        "type": "string",
        "enum": ["strict", "standard", "permissive"],
        "description": "Per-workload security risk profile (G8)"
      }
    }
  },
  "uiHints": {
    "cost.hourlyLimitUsd": { "label": "Hourly Cost Limit (USD)", "help": "Maximum allowed spend per hour" },
    "cost.dailyLimitUsd": { "label": "Daily Cost Limit (USD)" },
    "cost.monthlyLimitUsd": { "label": "Monthly Cost Limit (USD)" },
    "cost.circuitBreakerEnabled": { "label": "Circuit Breaker", "help": "Auto-pause sessions when cost limit exceeded" },
    "autoHarden": { "label": "Auto-Harden", "help": "Automatically harden on gateway start" },
    "failureMode": { "label": "Failure Mode", "help": "How the system degrades when issues detected: block_all, safe_mode, or read_only" },
    "riskProfile": { "label": "Risk Profile", "help": "Security strictness level: strict, standard, or permissive" }
  }
}
